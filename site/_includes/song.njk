---
layout: base.njk
---

<article class="song-page">
  <header class="song-header">
    <h1>{{ title }}</h1>
    <div class="song-meta">
      <span class="key">Key: {{ key }}</span>
      <span class="tempo">{{ tempo }}</span>
      {% if original %}<span class="original">Original: {{ original }}</span>{% endif %}
    </div>
    {% if description %}
    <p class="song-description">{{ description }}</p>
    {% endif %}
  </header>

  <nav class="song-nav">
    <h2>Arrangement Documentation</h2>
    <div class="parts-grid">
      <a href="/songs/{{ slug }}/full-score/" class="part-card featured">
        <span class="icon">&#127932;</span>
        <span class="name">Full Score</span>
        <span class="desc">Complete arrangement overview</span>
      </a>
    </div>

    <h3>Instrument Parts</h3>
    <div class="parts-grid">
      <a href="/songs/{{ slug }}/keyboard/" class="part-card">
        <span class="icon">&#127929;</span>
        <span class="name">Keyboard</span>
        <span class="desc">Voicings, comping, fills</span>
      </a>
      <a href="/songs/{{ slug }}/bass/" class="part-card">
        <span class="icon">&#127928;</span>
        <span class="name">Bass</span>
        <span class="desc">Walking bass lines</span>
      </a>
      <a href="/songs/{{ slug }}/guitar/" class="part-card">
        <span class="icon">&#127928;</span>
        <span class="name">Guitar</span>
        <span class="desc">Shell voicings, rhythm</span>
      </a>
      <a href="/songs/{{ slug }}/drums/" class="part-card">
        <span class="icon">&#129345;</span>
        <span class="name">Drums</span>
        <span class="desc">Swing patterns, fills</span>
      </a>
      <a href="/songs/{{ slug }}/saxophone/" class="part-card">
        <span class="icon">&#127927;</span>
        <span class="name">Saxophone</span>
        <span class="desc">Melody, transpositions</span>
      </a>
      <a href="/songs/{{ slug }}/vocals/" class="part-card">
        <span class="icon">&#127908;</span>
        <span class="name">Vocals</span>
        <span class="desc">Lyrics, phrasing</span>
      </a>
    </div>
  </nav>

  <section class="content-section">
    {{ content | safe }}
  </section>

  <section class="resources-section">
    <h2>Resources</h2>
    <div class="resources-grid">
      <div class="resource-card">
        <h3>Download Package</h3>
        <p>Get all sheet music and MIDI files in one ZIP.</p>
        <a href="/downloads/{{ slug }}.zip" class="btn btn-primary" download>Download ZIP</a>
      </div>
      <div class="resource-card">
        <h3>MIDI Playback</h3>
        <p>Listen to the arrangement with our MIDI player.</p>
        <a href="/songs/{{ slug }}/listen/" class="btn btn-secondary">Listen</a>
      </div>
    </div>
  </section>
</article>
